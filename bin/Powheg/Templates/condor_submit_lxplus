executable              = ${execname}
arguments               = ${condor_args}
output                  = ${logname}_$$(ProcID}.out
error                   = ${logname}_$$(ProcID}.err
log                     = ${logname}_$$(ProcID}.log
initialdir              = ${rootfolder}/${folderName}

+JobFlavour             = ${run_queue}

WhenToTransferOutput    = ON_EXIT_OR_EVICT
${additional_info}

